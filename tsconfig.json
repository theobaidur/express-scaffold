{
  "compilerOptions": {
    "strict": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "composite": true,
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "target": "es5",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
